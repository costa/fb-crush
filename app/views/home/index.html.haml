.bg-layers.fixed-width
.content
  .tagline.text-blk
    .bg
    .fg
      .text-center= t('.tagline_html')
  .intro.text-blk
    .bg
    .fg
      = t('.intro.title_html')
  .intro-point.text-blk{class: "intro-point-login"}
    .bg
    .fg
      = link_to signin_path do
        = t('.intro.point.login_html')
  - t('.intro.point').keys.reject{|k| k == :login_html}.each do |k|
    .intro-point.text-blk{class: "intro-point-#{k.to_s.split('_')[0]}"}
      .bg
      .fg
        = t(".intro.point.#{k}")
  .summary.text-blk
    .bg
    .fg
      .text-center
        - heart_html = capture do
          .heart.text-danger
            %i.glyphicon.glyphicon-heart
        = t('.intro.summary_html', heart: heart_html)
  .login-blk.fixed-width
    .bg
    .fg
      .chevron
        %button.down.btn.btn-lg.btn-link
          = t('.view_story')
          %i.glyphicon.glyphicon-chevron-down
          %i.glyphicon.glyphicon-chevron-down
        %button.up.btn.btn-lg.btn-link
          %i.glyphicon.glyphicon-chevron-up
          %i.glyphicon.glyphicon-chevron-up
      = link_to signin_path, class: "btn btn-primary btn-lg btn-danger" do
        = t('layouts.navigation.login')
      .sub-titles
      .special.text-danger
        = t('.special.title_html')
      - t('.special.point').each_key do |k|
        .special-point.text-danger{class: "special-point-#{k.to_s.split('_')[0]}"}
          = t(".special.point.#{k}")
      .text-center
        .heart.text-danger
          %i.glyphicon.glyphicon-heart
:coffeescript
  $ crushLand
